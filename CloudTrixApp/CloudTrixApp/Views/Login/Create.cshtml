@model CloudTrixApp.Models.Employee
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="content-wrapper">
    <section class="content-header">
        <h1>

            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Login</a></li>
            <li class="active">Login</li>
        </ol>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col col-md-11">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                              
                                <hr />
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.EmployeeID)
                                <div class="container-fluid">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="UserName">User Name</label>
                                            @Html.TextBox("UserName", null, new { @class = "form-control  ", @placeholder = "User Name ", autocomplete = "off" })
                                            @Html.ValidationMessageFor(model => model.UserName)
                                        </div>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="Password">Password</label>
                                            @Html.TextBox("Password", null, new { @class = "form-control  ", @placeholder = "Password", autocomplete = "off" ,Type="password"})
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div>
                                    </div>
                                </div>

                                <div class="container-fluid">
                                    <div class="col-sm-4 col-lg-offset-4">
                                        <div class="form-group">
                                            <input type="submit" value="Login" class="btn btn-success" />                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>